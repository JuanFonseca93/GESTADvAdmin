@model Core.Dominio.TipoDocumento

@{
    ViewBag.Title = "ActualizarTipo";
}

<h2>Actualizar Tipo de documento</h2>

@using (Html.BeginForm("ActionActualizarTipo", "TipoDocumento", FormMethod.Post))
{
    @Html.HiddenFor(model => Model.idTipo)

    <div class="form-group">
        @Html.Label("Area del Tipo:")
        @Html.DropDownListFor(model => model.idTipo, new SelectList(ViewBag.Areas, "idTipo", "nombreTipo"), new { @class = "form-control" })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.idTipo)</small>
    </div>

    <h1>ruta del documento se generar automaticamente</h1>

    <div class="form-group">
        @Html.Label("Nombre:")
        @Html.EditorFor(model => model.nombreTipo, new { htmlAttributes = new { @class = "form-control" } })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.nombreTipo)</small>
    </div>

    <div class="form-group">
        @Html.Label("Descripcion:")
        @Html.EditorFor(model => model.detallesTipo, new { htmlAttributes = new { @class = "form-control" } })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.detallesTipo)</small>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        @Html.ActionLink("Cancelar", "TipoDocumento", "TipoDocumento", null,
                                     new { @class = "btn btn-danger btn-large" })
    </div>
}